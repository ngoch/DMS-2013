@model FillRatingsViewModel

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <table class="matrix">
        <tr>
            <td></td>
            @for (int j = 0; j < Model.Ratings[0].FactorNames.Count; j++)
            {
                <td>
                    @Html.LabelFor(model => model.Ratings[0].Values[j].Value, Model.Ratings[0].FactorNames[j])
                </td>
            }
        </tr>
        @for (int i = 0; i < Model.Ratings.Count; i++)
        {
            <tr>
                <td>@Html.DisplayFor(model => model.Ratings[i].Method)
                    @Html.HiddenFor(model => model.Ratings[i].WeightId)
                </td>
                @for (int j = 0; j < Model.Ratings[i].FactorNames.Count; j++)
                {
                    <td>
                        @Html.TextBoxFor(model => model.Ratings[i].Values[j].Value)
                    </td>
                }
            </tr>
        }
    </table>
    <input type="submit" value="@ApplicationStrings.Next" />
}